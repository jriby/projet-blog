<h1>Posts#index</h1>

<ul>  
<% @posts.each do |post| %> 
  <li><%= post.title %><% if is_connected? %><%= link_to 'Destroy', post, :confirm=>"Are you sure", method: :delete %>
                       <%= link_to 'Edit', edit_post_path(post.id) %>
                       <% end %>
                       <%= link_to 'Show', post_path(post.id) %></li>
<% end %>
</ul>

<% if is_connected? %><p><%= link_to 'New Post', new_post_path %></p><% end %>

<%= render 'sessions/status_session' %>


